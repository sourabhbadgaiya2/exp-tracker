<%-include("./partials/header") %> <%- include("./partials/navbar") %>
<h1>Homepage</h1>

<div class="ml-52 mt-20 w-fit">
  <h2 class="font-bold text-xl">Embrace the Day</h2>
  <p class="text-right mt-4 font-snug">
    With each sunrise, a chance anew, <br />
    To chase your dreams and make them true.
  </p>
  <br />
</div>

<div class="rounded absolute top-32 shadow shadow-slate-500 right-52 py-1 bg-white">
  <h2 class="text-2xl font-bold pl-8">Log in</h2>
  <form
    class="flex flex-col gap-3 w-96 py-4 rounded-xl items-center"
    action="/user/signin"
    method="post"
  >
    <input
      class="py-2 w-80 px-2 bg-transparent outline-none border-[1px] border-zinc-500 rounded"
      type="text"
      name="username"
      placeholder="Enter Username"
    />
    <input
      class="py-2 w-80 px-2 bg-transparent outline-none border-[1px] border-zinc-500 rounded"
      type="password"
      name="password"
      placeholder="Enter password"
    />
    <button class="btn btn-block w-80 btn-reddit">Log In</button>
    <a class="" href="/user/forget-password"
      >forgotten password <span class="text-blue-950">Click here</span></a
    >
    <a class="btn w-80 text-center btn-social btn-vk" href="/user/register"
      >Create new account</a
    >
    <a
      class="btn w-80 text-center btn-social btn-google"
      href="/user/auth/google"
      role="button"
    >
      <i class="fab fa-google"></i>
      Sign In with Google
    </a>
    <a
      class="btn w-80 text-center btn-social btn-facebook"
      href="/user/auth/google"
      role="button"
    >
      <i class="fab fa-facebook"></i>
      Sign In with Facebook
    </a>
  </form>
</div>
