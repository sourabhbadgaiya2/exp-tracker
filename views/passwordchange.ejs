<%-include("./partials/header") %> <%- include("./partials/navbar") %>

<h1>Password Change</h1>
<div class="w-full flex items-center justify-center">
  <form
    class="px-10 h-[50vh] justify-center rounded-xl flex flex-col gap-2 items-center shadow-lg"
    action="/user/passwordchange"
    method="post"
  >
    <input
      class="border border-slate-400 px-4 py-3 bg-transparent rounded-md w-72 outline-none"
      type="password"
      name="oldpassword"
      placeholder="Old password"
    />
    <input
      class="border border-slate-400 px-4 py-3 bg-transparent rounded-md w-72 outline-none"
      type="password"
      name="newpassword"
      placeholder="New password"
    />
    <button
      class="bg-[#00A400] py-2 px-3 w-72 text-white font-bold text-md rounded"
    >
      Change Password
    </button>
  </form>
</div>

<%-include("./partials/footer") %>
